<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Animals">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:backgroundTint="#000000"
                android:scaleType="fitStart"
                android:src="@drawable/fv" />

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:srcCompat="@drawable/back" />

        </RelativeLayout>

        <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="400dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/apple"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/apple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Apple"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/apples"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/apples" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Apples"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="400dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/banana"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/banana" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Banana"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/bananas"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/bananas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Bananas"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="400dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/orange"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Orange"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/oranges"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/oranges" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Oranges"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="400dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/carrot"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/carrot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Carrot"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/carrots"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/carrots" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Carrots"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="400dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/peper"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/peper1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Peper"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/peppers"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/peppers" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:text="Peppers"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="400dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tomato"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/tomato" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="Tomato"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/tomatos"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/tomatos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="Tomatos"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>








