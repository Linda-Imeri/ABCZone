<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="1dp"
    android:layout_marginStart="1dp"
    android:layout_weight="100"
    tools:context=".Colors">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:backgroundTint="#000000"
                android:scaleType="fitStart"
                android:src="@drawable/colorbg" />

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:srcCompat="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingBottom="20dp"
        android:layout_margin="10dp"
        android:background="#FFFFFF">

        <Button
            android:text="RED"
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FB1111"
            android:layout_alignParentLeft="true"
            ></Button>

        <Button
            android:id="@+id/button2"
            android:text="ORANGE"
            android:layout_width="250"
            android:layout_height="match_parent"
            android:backgroundTint="#FF7801"
            android:layout_alignParentRight="true"
            ></Button>

        <Button
            android:id="@+id/button3"
            android:text="Yellow"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FFF301"
            android:layout_centerHorizontal="true"
            ></Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="400dp"
            android:paddingBottom="20dp"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/button5"
                android:text="BLUE"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:backgroundTint="#013DFF"
                android:layout_alignParentLeft="true"
                ></Button>

            <Button
                android:id="@+id/button4"
                android:text="GREEN"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:backgroundTint="#1BB22E"
                android:layout_alignParentRight="true"
                ></Button>

            <Button
                android:id="@+id/button6"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E100FF"
                android:text="PURPLE"
                android:layout_centerHorizontal="true"
                ></Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:paddingBottom="20dp"
            android:background="#FFFFFF ">

            <Button
                android:id="@+id/button7"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFC0CB"
                android:text="PINK"
                android:layout_alignParentLeft="true"
                ></Button>

            <Button
                android:id="@+id/button8"
                android:text="GREY"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:backgroundTint="#A8A6AF"
                android:layout_alignParentRight="true"
                ></Button>

            <Button
                android:id="@+id/button9"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="BLACK"
                android:layout_centerHorizontal="true"
                ></Button>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>


